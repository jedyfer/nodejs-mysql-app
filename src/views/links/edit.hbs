<div class="container p-4">
    <div class="row">
        <div class="col-md-4 m-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.idlink}}" method="POST">
                        <div class="row mb-3">
                            <div class="col">
                                <input type="text" name="title" value="{{ link.title }}" class="form-control" placeholder="Title" autofocus>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <input type="url" name="url" value="{{ link.url }}" class="form-control" placeholder="URL">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <textarea name="description" rows="2" class="form-control"
                                    placeholder="Description">{{ link.description }}</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <button type="input" class="btn btn-success d-block w-100">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>