<div class="container p-4">
    <div class="row">
        {{!-- en caso de #each no se puede escribir separado de las llaves como {{ #each }} esto es incorrecto --}}
        {{#each links}}
            <div class="col-md-3 g-3"> {{!-- g-3: crea el espaciado intermedio entre cards --}}
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{ url }}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{ title }}
                            </h3>
                        </a>
                        <p class="m-2">{{ description }}</p>
                        <p class="mb-3">{{ timeago created_date }}</p>
                        <a href="/links/delete/{{idlink}}" class="btn btn-danger">Delete</a>
                        <a href="/links/edit/{{idlink}}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 m-auto">
                <div class="card card-body text-center">
                    <p>There are no links saved yet.</p>
                    <a href="/links/add">Create one</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>